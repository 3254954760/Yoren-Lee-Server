// https://chatgpt.com/c/6987f4f0-6a04-8324-95fe-35ba2ebe7aa9
model User {
  id          Int      @id @default(autoincrement())

  username    String
  email       String?  @unique

  avatar      String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 一个用户可能有多个第三方账号
  accounts    Account[]

  // 业务扩展字段
  role        String   @default("user")
  status      Int      @default(1)

  @@map("users")
}
